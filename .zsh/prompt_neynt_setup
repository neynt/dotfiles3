# vim:syntax=zsh
prompt_neynt_setup() {
  PROMPT="${prompt_newline}"
  # user@host:/dir
  PROMPT+="%B%F{cyan}%n%f%b"  # user
  PROMPT+="%F{white}@%f"  # @
  PROMPT+="%B%F{green}%m%f%b"  # host
  PROMPT+="%F{black}:%f"  # :
  PROMPT+="%B%F{yellow}%~%f%b"  # /dir
  PROMPT+="%b"
  # Current time
  PROMPT+=" %F{white}[%*]%f"
  # Exit code if nonzero
  PROMPT+="%(?,, %F{red}%?%f)"
  PROMPT+="${prompt_newline}"
  # Prompt char
  PROMPT+="%F{red}$%f "
}
prompt_neynt_setup "$@"
