#!/bin/bash
#
# Diary script. Keeps a diary in an encrypted file, unzipping/zipping it
# whenever you want to modify it.

DIARY_FILE="$HOME/diary.bin"
LOCK_FILE="$HOME/diary.bin.lock"

SCRATCH_DIR=$(mktemp -d)
DIARY_DIR="diary"
TAR_GZ="diary.tar.gz"

if [[ -e $LOCK_FILE ]]; then
  echo "Lock file exists ($LOCK_FILE), do you already have the diary open?"
  exit 1
fi

echo "Password?"
read -s PASSWORD

unpack() {
  cd "$SCRATCH_DIR"
  cp "$DIARY_FILE" "$TAR_GZ".gpg
  result=$?
  if echo "$PASSWORD" | gpg --batch --yes --passphrase-fd 0 -o $TAR_GZ -d $TAR_GZ.gpg 2> /dev/null; then
    tar -xzf "$TAR_GZ"
  else
    echo "I can neither confirm nor deny the existence of the diary."
    rm -f "$LOCK_FILE"
    exit 1
  fi
}

write_stuff() {
  cd "$SCRATCH_DIR"
  mkdir -p "$DIARY_DIR"
  cd "$DIARY_DIR"
  YYYY="$(date +%Y)"
  MM="$(date +%m)"
  DD="$(date +%d)"
  mkdir -p $YYYY/$MM
  FILE="$YYYY/$MM/$DD.md"
  $EDITOR "$FILE"
  if [[ -f "$FILE" ]]; then
    echo 'You wrote' $(wc -w < $FILE) 'words.'
  fi
}

repack() {
  cd "$SCRATCH_DIR"
  tar -czf "$TAR_GZ.new" "$DIARY_DIR"
  echo "$PASSWORD" | gpg --batch --yes --passphrase-fd 0 -o "$TAR_GZ.gpg.new" 2> /dev/null -c "$TAR_GZ.new"
  rm -f "$DIARY_FILE"
  cp "$TAR_GZ.gpg.new" "$DIARY_FILE"
  rm -r "$SCRATCH_DIR"
}

touch "$LOCK_FILE"
if [[ -e "$DIARY_FILE" ]]; then
  unpack
fi
write_stuff
repack
rm -f "$LOCK_FILE"
