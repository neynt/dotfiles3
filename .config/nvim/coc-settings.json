{
  "deno.config": "./tsconfig.json",
  "languageserver": {
    "ocaml": {
      "command": "opam",
      "args": ["exec", "--", "ocamllsp"],
      "filetypes": ["ocaml"]
    },
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"]
    }
  }
}
